<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout

        android:id="@+id/fon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".NoMessageFr">


        <TextView
            android:id="@+id/nomessage"
            style="@style/TextTitleBig"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:fontFamily="@font/dm_sans_bold"
            android:text="No Messages"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <TextView
            android:id="@+id/secondmessage"
            style="@style/SecondTextStyle"
            android:layout_width="289dp"
            android:layout_height="54dp"
            android:gravity="center"
            android:layout_marginTop="36dp"
            android:fontFamily="@font/dm_sans_medium"
            android:text="When you have messages youâ€™ll see them here"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.609"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nomessage" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button"
            style="@style/ButtonStyle"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Go Back"
            android:fontFamily="@font/dm_sans_medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/secondmessage" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="280dp"
            android:layout_height="229dp"
            android:layout_marginTop="88dp"
            android:src="@drawable/ic_no_message_illustration"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>

